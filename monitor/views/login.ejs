<div id='login' class='loginblock <%= loggedin != true ? "loggedin" : "notloggedin" %>'    >
    <form class="form-signin" action="login">
        <h4 class="form-signin-heading">Please sign in</h4>
        <input type="text" class="input-block-level" name="login[userid]" placeholder="User Name">
        <input type="password" class="input-block-level" name="login[password]" placeholder="Password">
        <button class="btn btn-large btn-primary" type="submit">Sign in</button>
    </form>
</div>
